name:                  amazon-{{ cabal_name }}
version:               {{ cabal_version }}
synopsis:              {{ service_full_name }}
homepage:              http://github.com/brendanhay/amazon
license:               OtherLicense
license-file:          LICENSE
author:                Brendan Hay
copyright:             Copyright (c) 2013-2014 Brendan Hay
maintainer:            Brendan Hay <brendan.g.hay@gmail.com>
stability:             Experimental
category:              AWS, Cloud, Network
build-type:            Simple
cabal-version:         >= 1.10

description:
    Pending

extra-source-files:
    README.md

source-repository head
    type:     git
    location: git://github.com/brendanhay/amazon.git

library
    default-language:  Haskell2010
    hs-source-dirs:    src gen
    ghc-options:       -Wall

    exposed-modules:
        Network.AWS.{{ module }}

    other-modules:
        Network.AWS.{{ module }}.Service
      , Network.AWS.{{ module }}.Types

{% for op in operations %}
      , Network.AWS.{{ module }}.{{ op.value }}
{% endfor %}

    build-depends:
        base >= 4.6 && < 5
